<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    >

    <ImageView
        android:id="@+id/contact_type_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_star"
        android:visibility="gone"
        tools:visibility="visible"
        />


    <TextView
        android:id="@+id/contact_first_letter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:visibility="gone"
        tools:text="A"
        tools:visibility="visible"
        />

    <com.example.vardansharma.contact_app.utils.MaterialLetterIcon
        android:id="@+id/contact_letter_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        app:mli_initials="true"
        app:mli_letters_number="1"
        />

    <TextView
        android:id="@+id/contact_name"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        tools:text="Vardan sharma"
        />
</LinearLayout>